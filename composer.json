{
    "name": "prophit/account-tree",
    "description": "Tree implementation for hierarchical accounts in Prophit",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Turland",
            "email": "me@matthewturland.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Prophit\\AccountTree\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "loophp/phptree": "^2.6",
        "prophit/core": "dev-main"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.9",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "analyze": "phpstan analyze -c phpstan-baseline.neon",
        "test": "pest"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    }
}
